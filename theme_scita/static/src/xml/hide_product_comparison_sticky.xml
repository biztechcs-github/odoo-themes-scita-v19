<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="website_sale_comparison.ProductRow" t-inherit-mode="extension">
        <xpath expr="//small" position="replace">
            <small t-if="! props.website_show_price" class="mb-0 text-body text-danger">
                    Price is hidden
            </small>
            <small t-elif="props.website_hide_price" class="mb-0 text-body text-danger">
                    Price is hidden
            </small>
            <!-- Else show price if sale is allowed -->
            <small t-elif="!props.prevent_zero_price_sale" class="mb-0 text-body">
                <span t-out="formattedPrice" class="me-1 text-nowrap"/>
                <del t-if="props.strikethrough_price" t-out="formattedStrikethroughPrice" class="text-nowrap text-muted" />
            </small>
        </xpath>
    </t>
    <t t-inherit="website_sale_comparison.ProductComparisonBottomBar" t-inherit-mode="extension">
        <xpath expr="//div[@name='comparison_bottom_bar']" position="attributes">
            <attribute name="t-if">state.products.size and (typeof window !== 'undefined' and window.location.pathname !== '/')</attribute>
        </xpath>
    </t>
</templates>
