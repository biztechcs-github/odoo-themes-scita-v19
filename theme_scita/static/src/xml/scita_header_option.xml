                }
            ]"
        >
            <Img attrs="{style:'width:calc(100% - 0.5rem);'}" src="'/theme_scita/static/src/img/snippet_icon/Automobile-header.png'"/>
        </BuilderSelectItem>
        <BuilderSelectItem
            title.translate="Scita Header 5"
            id="'scita_header_5_opt'"
            actionParam="[
                {
                    action: 'websiteConfig',
