 <t t-inherit="website_sale.ProductsListPageOption" t-inherit-mode="extension">
    <!-- Dummy element to allow styling this specific option container with .o_wsale_products_list_page_options -->
    <div class="d-none o_wsale_products_list_page_options"/>
        <xpath expr="//BuilderRow[last()]" position="after">
            <BuilderRow label.translate="Scita Add to Cart">
                <BuilderButton
                    title.translate="Enable Add to Cart"
                    id="'scita_add_to_cart_opt'"
                    action="'templatePreviewableWebsiteConfig'"
                    actionParam="{
                        views: ['theme_scita.scita_products_item_enable_add_cart'],
                        previewClass: 'o_scita_preview_add_cart',
                        templateId: 'theme_scita.scita_products_item_enable_add_cart',
                        placeAfter: '.o_wsale_products_item',
                    }"
                />
            </BuilderRow>
            <BuilderRow label.translate="Image Transition Effect" applyTo="'img'">
                <BuilderSelect action="'selectClass'" actionParam="{selector: 'img'}">
                    <BuilderSelectItem actionValue="'none_effect'">Remove Effect</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'sct_img_effect1'">Effect 1</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'sct_img_effect2'">Effect 2</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'sct_img_effect3'">Effect 3</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'sct_img_effect4'">Effect 4</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'sct_img_effect5'">Effect 5</BuilderSelectItem>
                </BuilderSelect>
            </BuilderRow>
              <BuilderRow label.translate="Product Loader Options"
                        applyTo="'main:has(.o_wsale_products_page)'"
                        data-no-check="true">
                <BuilderSelect action="'customizeWebsiteViews'" actionParam="{}" data-no-preview="true">
                    <BuilderSelectItem actionValue="'theme_scita.default_pager'">
                        Default
                    </BuilderSelectItem>
                    <BuilderSelectItem actionValue="'theme_scita.lazy_load_button'">
                        Button
                    </BuilderSelectItem>
                </BuilderSelect>
            </BuilderRow>
              <!-- ðŸ”¹ Buy Now Button Option -->
            <BuilderRow label.translate="Buy Now Button">
                <BuilderButton
                    title.translate="Enable Buy Now"
                    action="'customizeWebsiteViews'"
                    actionValue="'theme_scita.scita_product_buy_now'"
                />
            </BuilderRow>

            <!-- ðŸ”¹ Rating Option -->
            <BuilderRow label.translate="Product Rating">
                <BuilderButton
                    title.translate="Enable Rating"
                    action="'customizeWebsiteViews'"
                    actionValue="'theme_scita.theme_scita_rating'"
                    data-no-preview="true"
                    data-reload="/"
                />
            </BuilderRow>

            <!-- ðŸ”¹ Quantity Selector Option -->
            <BuilderRow label.translate="Quantity Selector">
                <BuilderCheckbox
                    title.translate="Enable Quantity Selector"
                    action="'customizeWebsiteViews'"
                    actionValue="'theme_scita.theme_scita_product_quantity'"
                    data-no-preview="true"
                    data-reload="/"
                />
            </BuilderRow>
            <BuilderButton
                        title.translate="Wishlist"
                        action="'customizeWebsiteViews'"
                        actionValue="'theme_scita.scita_product_add_to_wishlist'"
                        data-no-preview="true"
                        data-reload="/">
                        <i class="fa fa-fw fa-heart"/>
                        Wishlist
            </BuilderButton>
             <BuilderButton
                title.translate="Compare"
                action="'customizeWebsiteViews'"
                actionValue="'theme_scita.product_add_to_compare'"
                data-no-preview="true"
                data-reload="/">
                <i class="fa fa-fw fa-exchange"/>
                Compare
            </BuilderButton>

            <!-- ðŸ”¹ Compare - Inside Tab Option -->
            <BuilderButton
                title.translate="Inside Tab"
                action="'customizeWebsiteViews'"
                actionValue="'theme_scita.scita_product_description_table'"/>
                  <!-- ðŸ”¹ Buttons Style -->
            <BuilderRow label.translate="Buttons Style" applyTo="'.btn'">
                <BuilderSelect action="'customizeWebsiteVariable'" 
                               actionParam="{}" 
                               data-variable="btn-style-template" 
                               data-reload="/" 
                               data-attribute-default-value="btn_style_1">
                    <BuilderSelectItem actionValue="'btn_style_1'" data-img="/theme_scita/static/src/img/snippet_icon/Button-style1.svg">
                        Buttons Style 1
                    </BuilderSelectItem>
                    <BuilderSelectItem actionValue="'btn_style_2'" data-img="/theme_scita/static/src/img/snippet_icon/Button-style2.svg">
                        Buttons Style 2
                    </BuilderSelectItem>
                    <BuilderSelectItem actionValue="'btn_style_3'" data-img="/theme_scita/static/src/img/snippet_icon/Button-style3.svg">
                        Buttons Style 3
                    </BuilderSelectItem>
                    <BuilderSelectItem actionValue="'btn_style_4'" data-img="/theme_scita/static/src/img/snippet_icon/Button-style4.svg">
                        Buttons Style 4
                    </BuilderSelectItem>
                </BuilderSelect>
            </BuilderRow>

            <!-- ðŸ”¹ Product Hover Style -->
            <BuilderRow label.translate="Product Hover Style" applyTo="'.o_wsale_products_item'">
                <BuilderSelect action="'customizeWebsiteVariable'" 
                               actionParam="{}" 
                               data-variable="prod-hover-style" 
                               data-reload="/" 
                               data-attribute-default-value="prod_hover_style_1">
                    <BuilderSelectItem actionValue="'prod_hover_style_1'">Effect Style 1</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'prod_hover_style_2'">Effect Style 2</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'prod_hover_style_3'">Effect Style 3</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'prod_hover_style_4'">Effect Style 4</BuilderSelectItem>
                    <BuilderSelectItem actionValue="'prod_hover_style_5'">Effect Style 5</BuilderSelectItem>
                </BuilderSelect>
            </BuilderRow>
        </xpath>
        
    </t>
  <t t-inherit="website_sale_comparison.ProductRow" t-inherit-mode="extension">
