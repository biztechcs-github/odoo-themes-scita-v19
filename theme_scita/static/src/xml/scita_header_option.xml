<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="website.headerTemplateOption" t-inherit-mode="extension">
        <xpath expr="//BuilderSelect" position="inside">
        <BuilderSelectItem
            title.translate="Scita Header 1"
            id="'scita_header_1_opt'"
            actionParam="[
                {
                    action: 'websiteConfig',
                    actionParam: {
                        views: [
                            'theme_scita.option_header_1',
                            'theme_scita.scita_header_cart_link',
                            'theme_scita.scita_header_wishlist_link',
                            'theme_scita.scita_header_search_box_icon',
                            'theme_scita.scita_header_mobile'
                        ],
                        vars: {'header-template': 'scita_header_1'},
                        checkVars: false
                    }
                }
            ]"
        >
            <Img attrs="{style:'width:calc(100% - 0.5rem);'}" src="'/theme_scita/static/src/img/snippet_icon/header-1.png'"/>
        </BuilderSelectItem>
        <BuilderSelectItem
            title.translate="Scita Header 2"
            id="'scita_header_2_opt'"
            actionParam="[
                {
                    action: 'websiteConfig',
                    actionParam: {
                        views: [
                            'theme_scita.option_header_2',
                            'theme_scita.scita_header_cart_link',
                            'theme_scita.scita_header_wishlist_link',
                            'theme_scita.scita_header_search_box_icon',
                            'theme_scita.scita_header_mobile'
                        ],
                        vars: {'header-template': 'scita_header_2'},
                        checkVars: false
                    }
                }
            ]"
        >
            <Img attrs="{style:'width:calc(100% - 0.5rem);'}" src="'/theme_scita/static/src/img/snippet_icon/header-2.png'"/>
        </BuilderSelectItem>
        <BuilderSelectItem
            title.translate="Scita Header 3"
            id="'scita_header_3_opt'"
            actionParam="[
                {
                    action: 'websiteConfig',
                    actionParam: {
                        views: [
                            'theme_scita.option_header_3',
                            'theme_scita.scita_header_cart_link',
                            'theme_scita.scita_header_wishlist_link',
                            'theme_scita.scita_header_search_box_icon',
                            'theme_scita.scita_header_mobile',
                            'theme_scita.scita_header_all_category_mobile',
                            
                        ],
                        vars: {'header-template': 'scita_header_3'},
                        checkVars: false
                    }
                }
            ]"
        >
            <Img attrs="{style:'width:calc(100% - 0.5rem);'}" src="'/theme_scita/static/src/img/snippet_icon/grocery-header.png'"/>
