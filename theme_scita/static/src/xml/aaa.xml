<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="website_sale_comparison.ProductRow" t-inherit-mode="extension">
        <xpath expr="//small" position="replace">
            <!-- <t t-out="props.website_hide_price" />
            <t t-out="props.website_show_price" /> -->
            <!-- <t t-out="props.website_show_price and (!props.website_hide_price)" /> -->
              <!-- website and website.website_show_price and not product.website_hide_price -->
            <!-- <small t-if="props and !props.website_show_price and props.website_hide_price" class="mb-0 text-body text-danger"> -->
            <small t-if="props.website_show_price and (props.website_hide_price)" class="mb-0 text-body text-danger">
                <!-- <span t-if="props.website_hide_price"> -->
                     Not Available for Sale
                <!-- </span> -->
            </small>

            <!-- Else show price if sale is allowed -->
            <small t-elif="!props.prevent_zero_price_sale" class="mb-0 text-body">
                <span t-out="formattedPrice" class="me-1 text-nowrap"/>
                <del t-if="props.strikethrough_price" t-out="formattedStrikethroughPrice" class="text-nowrap text-muted" />
            </small>
        </xpath>
    </t>
</templates>
