<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- It Brands snippets -->
    <template id="it_prod_brands" name="Brand Snippet 1">
        <section  class="it_brand_slider" data-brand-config-type="" data-brand-config-id="" contentEditable="false"  data-disp='brand'>
            <div class="container">
                <div class="row our-brands">
                    <div class="col-md-12">
                        <h3 class="section-title style1" id="snippet-title">
                            <span>Brands</span>
                        </h3>
                         <div class="category-slider-placeholder">
                            <img src="/theme_scita/static/src/img/brand1.png" alt="Category Slider" class="img-fluid"/>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
