<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id='snippet_options_add' inherit_id='website.snippet_options' name='Theme add options'>
        <xpath expr='//div[@data-js="OptionsTab"]//we-input[@data-variable="btn-secondary-outline-border-width"]' position='after'>
            <we-select string="Buttons" data-variable="btn-style-template" data-reload="/" data-attribute-default-value="btn_style_1">
                <we-button title="Buttons Style 1"
                       data-name="btn_style_1"
                       data-customize-website-variable="'btn_style_1'"
                       data-img="/theme_scita/static/src/img/snippet_icon/Button-style1.svg"/>
                <we-button title="Buttons Style 2"
                       data-name="btn_style_2"
                       data-customize-website-variable="'btn_style_2'"
                       data-img="/theme_scita/static/src/img/snippet_icon/Button-style2.svg"/>
                <we-button title="Buttons Style 3"
                       data-name="btn_style_3"
                       data-customize-website-variable="'btn_style_3'"
                       data-img="/theme_scita/static/src/img/snippet_icon/Button-style3.svg"/>
                <we-button title="Buttons Style 4"
                       data-name="btn_style_4"
                       data-customize-website-variable="'btn_style_4'"
                       data-img="/theme_scita/static/src/img/snippet_icon/Button-style4.svg"/>
            </we-select>
            <we-select string="Product Hover Style" data-variable="prod-hover-style" data-reload="/"  data-attribute-default-value="prod_hover_style_1">
                <we-button title="Effect Style 1"
                       data-name="prod_hover_style_1"
                       data-customize-website-variable="'prod_hover_style_1'">
                Effect Style 1
                </we-button>

                <we-button title="Effect Style 2"
                       data-name="prod_hover_style_2"
                       data-customize-website-variable="'prod_hover_style_2'">
                       Effect Style 2
                </we-button>
                <we-button title="Effect Style 3"
                       data-name="prod_hover_style_3"
                       data-customize-website-variable="'prod_hover_style_3'">
                    Effect Style 3
                </we-button>
                <we-button title="Effect Style 4"
                       data-name="prod_hover_style_4"
                       data-customize-website-variable="'prod_hover_style_4'">
                    Effect Style 4
                </we-button>
                <we-button title="Effect Style 5"
                       data-name="prod_hover_style_5"
                       data-customize-website-variable="'prod_hover_style_5'">
                    Effect Style 5
                </we-button>
            </we-select>
        </xpath>
