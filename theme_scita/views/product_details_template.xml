    <template id="scita_tax_indication" inherit_id="website_sale.tax_indication">
        <xpath expr='//span' position='attributes'>
            <attribute name='class'>sct_vat</attribute>
        </xpath>
        <xpath expr='//span[@t-else=""]' position='attributes'>
            <attribute name='class'>sct_vat</attribute>
        </xpath>
    </template>
    <template id="custom_product_tags_inline_display" inherit_id="website_sale.product_title">
        <xpath expr="//t[@t-call='website_sale.product_tags']" position="replace"/>
            
        <xpath expr="//h1" position="replace">
            <section class="page-title">
                <div class="container mx-auto">
                    <div>
                        <ul class="breadcrumb">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/shop">Products</a>
                            </li>
                            <li t-if="category">
                                <a t-att-href="keep('/shop/category/%s' % slug(category), category=0)" t-field="category.name"/>
                            </li>
                            <li class="active">
                                <a class="prod_link" t-field="product.name"/>
                            </li>
                        </ul>
                    </div>
                    <div class="sct-next-prev-prod">
                        <div class='sct-btn-wrap'>
                            <a t-att-href="'/shop/%s' % prev_product" t-att-class="'sct_prev_text' if prev_product else 'sct_prev_text disable'">prev</a>
                        </div>
                        <div class='sct-btn-wrap'>
                            <a t-att-href="'/shop/%s' % next_product" t-att-class="'sct_next_text' if next_product else 'sct_next_text disable'">next</a>
                        </div>
                    </div>
                </div>
            </section>
            <h1 class='sct-prod-name' itemprop="name" t-field="product.name">Product Name</h1>
            <div class='sct-sku-display-div'>
                <p class='sct-sku-display'>SKU: <span class='sct-default-code' t-esc='product.default_code'/>
                </p>
            </div>
            <!-- <div class='sct-main-description-div' t-if="product.description_sale">
                <p t-field="product.description_sale" class="text-muted" placeholder="A short description that will also appear on documents." />
            </div> -->
        </xpath>
    </template>
    <template id="product_details_sku_change_as_per_variant" inherit_id="theme_scita.custom_product_tags_inline_display" name="Product Info">
        <xpath expr="//div[hasclass('sct-sku-display-div')]" position="replace">
            <div class='sct-sku-display-div'>
                <t t-if='product.default_code'>
                    <p class='sct-sku-display'>SKU: <span class='sct-default-code' t-esc='product.default_code'/>
                    </p>
                </t>
            </div>
        </xpath>
    </template>
    <template id="hide_product_breadcrumb" inherit_id="website_sale.product" name="Hide Breadcrumb on Product Page">
        <xpath expr="//ol[@class='o_wsale_breadcrumb breadcrumb m-0 p-0']" position="attributes">
            <attribute name="t-attf-style">display:none;</attribute>
        </xpath>
    </template>
    <template id="product_detail_custom_class" inherit_id="website_sale.product" priority="20">
        <xpath expr="//section[@id='product_detail']" position="attributes">
            <attribute name='class' add="container" separator=" "/>
        </xpath>
    </template>

    <!-- STEP 1: remove base Odoo 19 collapsible "Customer Reviews" block -->
    <template id="hide_base_review_section" inherit_id="website_sale.product" name="Hide Base Review Section (Scita Compatible)" priority="20">
        <!-- Remove the entire base review section div that contains o_product_page_reviews -->
        <!-- This will also make the review link (if any) point to a non-existent section, effectively hiding it -->
        <xpath expr="//div[@class='o_shop_discussion_rating border-top' and .//section[@id='o_product_page_reviews']]" position="replace"/>
    </template>
    <template id="theme_scita_rating_19" inherit_id="theme_scita.theme_scita_product_details" name="Scita Discussion and Ratings (Odoo 19)" active="True" customize_show="True" priority="15">
        <xpath expr="//div[@id='website_description']/div/ul/li" position="after">
            <li role="presentation" t-if="is_view_active('website_sale.product_comment')">
                <a aria-controls="reviews" data-bs-toggle="tab" href="#reviews" role="tab">
                    Reviews
                    <t t-if="len(product.website_message_ids)">
                        <span class="review_label">
                            (                            <t t-esc="len(product.website_message_ids)"/>
)
                        </span>
                    </t>
                </a>
            </li>
        </xpath>
        <xpath expr="//div[@id='website_description']//div[@id='description']" position="after">
            <div class="tab-pane" id="reviews" role="tabpanel" t-if="is_view_active('website_sale.product_comment')">
                <section class="container pt48 pb48">
                    <div class="o_shop_discussion_rating border-top">
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="product"/>
                            <t t-set="display_rating" t-value="True"/>
                            <t t-set="message_per_page" t-value="5"/>
                            <t t-set="two_columns" t-value="true"/>
                        </t>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

    <template id="scita_description" inherit_id="portal_rating.rating_widget_stars_static">
        <xpath expr="//div[hasclass('o_website_rating_static')]" position="after">
          <div class='sct-main-description-div' t-if="product.description_sale">
                <p t-field="product.description_sale" class="text-muted" placeholder="A short description that will also appear on documents." />
           </div>
           </xpath>
    </template>
    <template id="add_container_class_to_product_detail" inherit_id="website_sale.product" name="Add Container Class to Product Detail Section">
        <xpath expr="//section[@id='product_detail']" position="attributes">
            <attribute name="class" remove="container-lg" separator=" "/>
        </xpath>
    </template>
        <template id="scita_tag"
            inherit_id="website_sale.product_terms_and_conditions"
            name="Add Product Tags After Terms  Conditions">

        <!-- Target the <small> inside your terms template -->
        <xpath expr="//small" position="before">
            <t t-if="is_view_active('website_sale.product_tags')">
                <t t-if="product_variant.all_product_tag_ids">
                    <p class="mt-2">
                        <strong>Tags:</strong>
                        <t t-set="tag_len" t-value="len(product_variant.all_product_tag_ids)"/>
                        <t t-foreach="enumerate(product_variant.all_product_tag_ids)" t-as="tag_item">
                            <t t-set="i" t-value="tag_item[0]"/>
                            <t t-set="tag" t-value="tag_item[1]"/>
                            <t t-esc="tag.name"/>
                            <t t-if="i + 1 &lt; tag_len">, </t>
                        </t>
                    </p>
                </t>
            </t>
        </xpath>
    </template>
