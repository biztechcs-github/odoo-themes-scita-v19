<!-- similar product -->
<odoo>
    <record id="view_product_form_similar" model="ir.ui.view">
        <field name="name">product.template.similar.products</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Similar Products">
                    <field name="similar_product_ids" 
                        widget="many2many_tags" 
                        options="{'no_create': True}"
                        placeholder="Select products that are similar to this one for suggestions on the website."/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
