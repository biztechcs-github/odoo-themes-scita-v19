<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- retail Newsletter -->
    <template id="retail_sign_up_newsletter" name="Newsletter Snippet 3">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg retial_newsletter_2 sign-up-container" style="background-image: url(/theme_scita/static/src/img/retail/nwesletter-bg.png);" data-disp="newsletter" data-list-id="1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="newsletter_title">
                            <h2 class="section-title">Newsletter</h2>
                            <p>If you are unable to load any pages, check your comput.</p>
                        </div>
                        <div class="input-group s_newsletter_list js_subscribe_wrap js_subscribe" data-list-id="1">
                            <div class="js_subscribed_wrap d-none">
                                <p class="h4-fs text-center text-success">
                                    <i class="fa fa-check-circle-o" role="img"/>
                            Thanks for registering!</p>
                            </div>
                            <div class="newsletter_box js_subscribe_wrap">
                                <input class="popup_subscribe_email js_subscribe_value form-control" name="email" placeholder="Enter Your Email Address" type="email"/>
                                <span class="input-group-btn">
                                    <a class="btn js_subscribe_btn o_submit" href="#">Submit</a>
                                    <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none o_submit js_subscribed_wrap" disabled="disabled">Thanks</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
